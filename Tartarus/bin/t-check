#!/usr/bin/python
from Tartarus.system import check, Error
import sys

def main():
    try:
        sys.stdout.write("\nCheck host and domain: ")
        check.check_host_domain()
    except Error, e:
        sys.stdout.write('\033[91mFAIL\033[0m\n%s\n' % e)
    else:
        sys.stdout.write('\033[92mDONE\033[0m\n')

    try:
        sys.stdout.write("\nCheck time on server and localtime: ")
        check.check_Time()
    except Error, e:
        sys.stdout.write('\033[91mFAIL\033[0m\n%s\n' % e)
    else:
        sys.stdout.write('\033[92mDONE\033[0m\n')

    try:
        sys.stdout.write("\nCheck kerberos: ")
        check.check_krb5_lookup()
    except Error, e:
        sys.stdout.write('\033[91mFAIL\033[0m\n%s\n' % e)
    else:
        sys.stdout.write('\033[92mDONE\033[0m\n')

    try:
        sys.stdout.write("\nCheck DNS: ")
        check.check_DNS()
    except Error, e:
        sys.stdout.write('\033[91mFAIL\033[0m\n%s\n' % e)
    else:
        sys.stdout.write('\033[92mDONE\033[0m\n')

if __name__ == '__main__':
    main()
